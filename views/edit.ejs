<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Editor</title>
</head>
<style>
body {
    font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    background-image: linear-gradient(45deg, rgb(255, 0, 0), rgb(255, 255, 255));
}
center {

    background-color: rgba(0, 0, 0, 0.9);
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    padding: 80px;
    border-radius: 15px;
    color: white;    
}
input {
    padding: 15px;
    outline: none;
    border: none;
}
button{
    background-color: blue;
    border: none;
    width: 100%;
    border-radius: 10px;
    color: white;
    font-size: 15px;

}



</style>
<body>
    
    <h2>Editar Registro</h2>
    <% crud.forEach(function(details) { %>
        <form action="/edit/<%= details._id %>" method="POST">
            <input type="text" value="<%= details.name %>" name="name">
            <input type="text" value="<%= details.surname %>" name="surname">
            <br />
            <button><a href="/show">Todos</a></button>
            <button type="submit">Editar</button>
        </form>
        <% }) %>
</body>

</html>